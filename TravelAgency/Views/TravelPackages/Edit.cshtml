@using TravelAgency.Domain.Shared
@model TravelAgency.Domain.Models.TravelPackage

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TravelPackage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price.Amount" class="control-label"></label>
                <input asp-for="Price.Amount" class="form-control" />
                <span asp-validation-for="Price.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price.TypeCurrency" class="control-label"></label>
                <select asp-for="Price.TypeCurrency" class="form-control" asp-items="Html.GetEnumSelectList<TypeCurrency>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateRange.From" class="control-label"></label>
                <input asp-for="DateRange.From" class="form-control" />
                <span asp-validation-for="DateRange.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRange.To" class="control-label"></label>
                <input asp-for="DateRange.To" class="form-control" />
                <span asp-validation-for="DateRange.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index" class="btn btn-primary m-1">Back to List</a>
    </div>
    
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
