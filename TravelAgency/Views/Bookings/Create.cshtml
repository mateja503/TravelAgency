@using TravelAgency.Domain.Shared
@model TravelAgency.Domain.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Customer.FullName" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label class="control-label">Itinerary Name</label>
                <select asp-for="ItineraryId" class ="form-control" asp-items="ViewBag.Itinerary"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateRange.From" class="control-label"></label>
                <input asp-for="DateRange.From" class="form-control" />
                <span asp-validation-for="DateRange.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRange.To" class="control-label"></label>
                <input asp-for="DateRange.To" class="form-control" />
                <span asp-validation-for="DateRange.To" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<BookingStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding: 10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding: 10px">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
